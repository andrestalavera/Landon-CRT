@model IEnumerable<Customer>

<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Birthdate</th>
        <th></th>
    </tr>
    
@foreach (var customer in Model)
{
    <tr>
        <td>@customer.FirstName</td>
        <td>@customer.LastName</td>
        <td>@customer.BirthDate</td>
        <td>
            @* @Html.ActionLink("Modifier", "Edit", new { Id = customer.Id }) *@

            <a asp-action="Edit" asp-route-id="@customer.Id">Modifier</a>
        </td>
    </tr>
}
</table>